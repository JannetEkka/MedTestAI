{
  "manifest_version": 3,
  "name": "MedTestAI - Auto Test Generator",
  "version": "1.0.0",
  "description": "Automatically detect PRDs and requirement documents, OCR them, and generate test cases",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://docs.google.com/*",
    "https://drive.google.com/*",
    "https://confluence.atlassian.com/*",
    "https://*.sharepoint.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://docs.google.com/*",
        "https://drive.google.com/*",
        "https://confluence.atlassian.com/*",
        "https://*.sharepoint.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}